@{
    ViewData["Title"] = "Index";
}
@model List<Product>
<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Ürünler Listesi</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün Adi</th>
                                <th>Birim Fiyatı</th>
                                <th>Stok Durumu</th>
                                <th>Kategori</th>
                                <th>Tedarikçi</th>
                                <th>Durumu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @if (item.IsActive)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.Stock</td>
                                        <td>@item.Category.CategoryName</td>
                                        <td>@item.Supplier.SupplierName</td>
                                        <td class="bg-success text-white"><span>Aktif</span></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div><!-- .animated -->
@section Css{
    <link rel="stylesheet" href="assets/css/lib/datatable/dataTables.bootstrap.min.css">
}

    @section Scripts{

    <!--Data Tables-->
    <script src="~/Template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/Template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/Template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/Template/assets/js/init/datatables-init.js"></script>
}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>
