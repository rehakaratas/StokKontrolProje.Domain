
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UserArea/Views/Shared/_UserLayout.cshtml";
}
@model List<Product>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Sepetteki Ürün Listesi</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Birim Fiyatı</th>
                        <th>Stok Durumu</th>

                        @*<th>Durumu</th>*@
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.IsActive)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.Stock</td>

                                <td>
                                    @*    <a asp-area="Admin" asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ID" class="btn btn-info btn-sm"><i class="fa fa-edit"></i>&nbsp; Güncelle</a> |*@
                                    <a asp-area="UserArea" asp-controller="Card" asp-action="RemoveFromCard" asp-route-id="@item.ID" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>&nbsp; Sil</a>
                                </td>
                            </tr>
                        }


                    }

                </tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td>Toplam Tutar : </td>
                    <td>@Model.Sum(x=>x.UnitPrice).ToString("C2")</td>
                </tr>

            </table>
            <div class="d-flex justify-content-end">
                <a asp-area="UserArea" asp-controller="Card" asp-action="CompleteOrder" class="btn btn-success"> Siparişi Tamamla</a>
            </div>

        </div>
    </div>
</div>

@section Css{
    <link rel="stylesheet" href="~/Template/assets/css/lib/datatable/dataTables.bootstrap.min.css">
}

    @section Scripts{
    <!-- Scripts -->

    <script src="~/Template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/Template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/Template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/Template/assets/js/init/datatables-init.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>

}

