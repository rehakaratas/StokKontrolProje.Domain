@{
    ViewData["Title"] = "UpdateSupplier";

}
@model Supplier
<div class="animated fadeIn">


    <div class="row">
        <div class=" offset-3 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong class="card-title">Tedarikçi Güncelle</strong>
                </div>
                <div class="card-body">
                    <!-- Credit Card -->
                    <div id="pay-invoice">
                        <div class="card-body">

                            <hr>
                            <form asp-area="Admin" asp-controller="Supplier" asp-action="UpdateSupplier" method="post" novalidate="novalidate">

                                <div class="form-group">
                                    <label asp-for="SupplierName" class="control-label mb-1">Tedarikçi Adı</label>
                                    <input asp-for="SupplierName" type="text" class="form-control" data-val-required="Lütfen tedarikçi adı giriniz." aria-required="true" aria-invalid="false" >
                                    <span asp-validation-for="SupplierName"></span>
                                </div>
                               
                                <div class="form-group has-success">
                                    <label asp-for="Address" class="control-label mb-1">Adresi</label>
                                    <input asp-for="Address" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Lütfen tedarikçi adresi giriniz." aria-required="true" aria-invalid="false">
                                    <span asp-validation-for="Address"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label mb-1">Emaili</label>
                                    <input asp-for="Email" type="text" class="form-control" data-val-required="Lütfen tedarikçi emaili giriniz." aria-required="true" aria-invalid="false" >
                                    <span asp-validation-for="Email"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label mb-1">Telefonu</label>
                                    <input asp-for="Phone" type="text" class="form-control" data-val-required="Lütfen tedarikçi telefonu giriniz." aria-required="true" aria-invalid="false" >
                                    <span asp-validation-for="Phone"></span>
                                </div>
                                
                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Tedarikçi Güncelle</span>
                                        <span id="payment-button-sending" style="display:none;">Güncelleniyor…</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div> <!-- .card -->

        </div><!--/.col-->













    </div>


</div><!-- .animated -->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}




